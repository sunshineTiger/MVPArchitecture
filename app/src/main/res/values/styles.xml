<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="dialogLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.0</item>
    </style>

    <style name="loading_style" parent="@android:style/Widget.PopupWindow">
        <item name="android:indeterminateDrawable">@drawable/loading_waiting</item>
    </style>

    <style name="BodyS_Dark">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>